<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:indicator="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.wiikzz.library.widget.CirclePageIndicator
        android:id="@+id/guide_view_pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="84dp"
        android:paddingBottom="1dip"
        android:paddingTop="1dp"
        indicator:fillColor="#ffffffff"
        indicator:pageColor="#33ffffff"
        indicator:radius="2dp"
        indicator:snap="false"
        indicator:strokeColor="#33ffffff"/>

</RelativeLayout>