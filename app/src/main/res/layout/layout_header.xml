<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/layout_header_height"
    android:background="@color/header_background">

    <ImageButton
        android:id="@+id/header_back_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/view_edge_padding"
        android:paddingRight="@dimen/view_edge_padding"
        android:src="@drawable/header_back_selector"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />
    <TextView
        android:textSize="@dimen/header_title_text_size"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_title_string"
        android:singleLine="true"
        android:layout_centerInParent="true" />
    <ImageButton
        android:id="@+id/header_function_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/view_edge_padding"
        android:paddingRight="@dimen/view_edge_padding"
        android:src="@drawable/header_function_selector"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>